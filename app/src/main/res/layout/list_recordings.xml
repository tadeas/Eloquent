<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:clickable="true"
    android:focusable="true"
    style="@style/list_item_2lines"
    android:background="@drawable/list_selected"
    >

    <TextView
        android:id="@+id/recording_topic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/list_header"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/recording_length"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/list_secondary"
            />

        <TextView
            android:id="@+id/recording_recorded_on"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:layout_weight="1"
            style="@style/list_secondary"
            />

    </LinearLayout>

</LinearLayout>